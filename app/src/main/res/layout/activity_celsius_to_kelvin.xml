<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perhitungan.konversi.CelsiusToKelvin">

    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konversi Celsius ke Kelvin"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        />

    <LinearLayout
        android:id="@+id/llCtoK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/txtJudul"
        app:layout_constraintTop_toBottomOf="@id/txtJudul">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Nilai Celsius"
            />
        <EditText
            android:id="@+id/etNilaiCelsius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Masukan Nilai Celsius"
            android:ems="10"
            android:inputType="numberDecimal|numberSigned"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnKonversi3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konversi"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/llCtoK"
        app:layout_constraintTop_toBottomOf="@id/llCtoK"
        />

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/btnKonversi3"
        app:layout_constraintTop_toBottomOf="@id/btnKonversi3"/>

</androidx.constraintlayout.widget.ConstraintLayout>